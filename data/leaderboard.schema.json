{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://local-hosted-wordle.dev/schemas/leaderboard.schema.json",
  "title": "LeaderboardStore",
  "type": "object",
  "required": ["version", "updatedAt", "profiles", "resultsByProfile"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "profiles": {
      "type": "array",
      "maxItems": 20,
      "items": {
        "type": "object",
        "required": ["id", "name", "createdAt", "updatedAt"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 24
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "resultsByProfile": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "maxProperties": 400,
        "additionalProperties": {
          "type": "object",
          "required": [
            "date",
            "won",
            "attempts",
            "maxGuesses",
            "submissionCount",
            "updatedAt"
          ],
          "additionalProperties": false,
          "properties": {
            "date": {
              "type": "string",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
            },
            "won": {
              "type": "boolean"
            },
            "attempts": {
              "type": ["integer", "null"],
              "minimum": 1
            },
            "maxGuesses": {
              "type": "integer",
              "minimum": 1
            },
            "submissionCount": {
              "type": "integer",
              "minimum": 1
            },
            "updatedAt": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      }
    }
  }
}
