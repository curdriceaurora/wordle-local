{
  "name": "local-hosted-wordle",
  "version": "1.0.0",
  "description": "Local-hosted Wordle with admin-set word of the day",
  "license": "CC0-1.0",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "build": "node scripts/build-assets.js",
    "definitions:build": "node scripts/build-en-definitions.js",
    "definitions:index": "node scripts/build-en-definitions.js --index-only",
    "perf:server": "node scripts/perf-server.js",
    "perf:server:modes": "node scripts/perf-server.js --modes",
    "lint": "eslint . --max-warnings=0",
    "schema:check": "node scripts/validate-schemas.js",
    "guardrails:nits": "node scripts/nit-guardrails.js",
    "check": "npm run lint && npm run schema:check && npm run guardrails:nits && npm test -- --runInBand",
    "pr:nits": "node scripts/pr-nits-report.js",
    "pr:watch-status": "node scripts/pr-watch-status.js",
    "test:provider:ui": "PLAYWRIGHT_BROWSERS=chromium playwright test tests/ui/admin-shell.spec.js",
    "test": "jest",
    "test:ui": "UI_COVERAGE=1 node scripts/ui-coverage-clean.js && UI_COVERAGE=1 playwright test && UI_COVERAGE=1 node scripts/ui-coverage-report.js",
    "test:ui:fast": "UI_COVERAGE=1 PLAYWRIGHT_BROWSERS=chromium node scripts/ui-coverage-clean.js && UI_COVERAGE=1 PLAYWRIGHT_BROWSERS=chromium playwright test && UI_COVERAGE=1 node scripts/ui-coverage-report.js",
    "test:all": "npm test && npm run test:ui",
    "prepare": "husky"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "nspell": "^2.1.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.49.1",
    "ajv": "^8.18.0",
    "ajv-formats": "^3.0.1",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.1.7",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "v8-to-istanbul": "^9.2.0",
    "wordnet-db": "^3.1.14"
  }
}
